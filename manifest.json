{
    "manifest_version": 2,
    "name": "Text QA Extension",
    "version": "0.1",
    "description": "Basic structure for Text QA Extension",
    "icons": {
        "48": "assets/icons/extension_icon.png"
    },
    "background": {
        "scripts": ["background/background.js"]
    },
    "permissions": [
        "contextMenus",
        "activeTab",
        "storage",
        "https://generativelanguage.googleapis.com/"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content/content.js"]
        }
    ]
}